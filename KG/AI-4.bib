	author = {Yang, Bilige and Nasab, Amir Mohammadi and Woodman, Stephanie J. and Thomas, Eugene and Tilton, Liana G. and Levin, Michael and Kramer-Bottiglio, Rebecca},
	year = {2024},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/adma.202400241},
