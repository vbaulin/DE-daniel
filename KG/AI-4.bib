	keywords = {Aminoacyl-tRRNA synthetase (aaRS), Autocatalysis, Genetic coding, Information, Quantum biology, Reflexivity},
	pages = {104027},
	file = {Wills - 2019 - Reflexivity, coding and quantum biology.pdf:files/8651/Wills - 2019 - Reflexivity, coding and quantum biology.pdf:application/pdf},
}

